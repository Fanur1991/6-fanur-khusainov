datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id        String   @id @default(uuid())
  name      String   @default("ANONYMOUS")
  email     String   @unique
  password  String
  games     Game[]
  createdAt DateTime @default(now())
}

model Game {
  id        String   @id @default(uuid())
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id])
  diceOne   Int
  diceTwo   Int
  result    Boolean
  createdAt DateTime @default(now())
}